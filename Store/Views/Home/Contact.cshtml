@using Store.Models
@model ContactModel
@{
    ViewBag.Title = "Contact";
}

@using (Html.BeginForm())
{
    @Html.EditorFor(m => m.ConcreteMark)
    <br />
    <input type="submit" value="Get coutries Qty" />
}
<br />
<hr />
@if (Model != null)
{
    <table>
        <thead>
            <tr>
                <td>Id</td>
                <td>Name</td>
                <td>ProducersIds</td>
            </tr>
        </thead>
        @foreach (var item in Model.Countries)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.ProducersId.Select(id => id.ToString()).Aggregate( "",(prev,next) => prev +" "+ next)</td>
            </tr>
        }
    </table>
}


